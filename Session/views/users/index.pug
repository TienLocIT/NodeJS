extends ../layouts/common
block content
    
    h1 
        span.mr-2 Users
        a(href="/users/create" class="btn btn-primary" ) New
    .d-flex.align-items-center 
        form.ml-auto(action="/users/search" method="GET" class="d-flex")
            input(type="text"  value=e  name="q" )
            .button(class="d-inline ml-2")
            button(id="button" class="btn btn-primary " )=numberproduct
                
    table.table
        tr 
            th Avatar
            th Name 
            th Phone        
            th Action
        each user in users
            tr 
                td
                    img(src=user.avatar width="64" )
                td=user.name
                td=user.phone
                td
                    a.btn.btn-light(href="/users/"+user.id) View 
                    a.btn.btn-light(href="/users/remove/"+user.id) Remove
                    a.btn.btn-light(href="/users/update/"+user.id) Update


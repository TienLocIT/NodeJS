extends ../layouts/common
block content
    h2 Create User
    form(action="/users/create" method="POST")  
        .form-group
        -var a=values?values.name:""
            label(for="name") Name
            if a==""
                 if errors
                    each error in errors
                        .alert.alert-danger=error
            else
                 if errors
                    each error in errors1
                        .alert.alert-danger=error
            input#name(type=" text" class="form-control" name="name" value=values?values.name:"")
        .form-group
        -var a=values?values.phone:""
            label(for="phone") Phone
            if a==""
                 if errors
                    each error in errors
                        .alert.alert-danger=error
            else
                 if errors
                    each error in errors2
                        .alert.alert-danger=error
            input#phone(type=" text" class="form-control" name="phone" value=values?values.phone:"")
        button(class="btn btn-primary") create